<%- include ( '../../partials/header.ejs' ) %>
<%- include ( '../../partials/sidebar.ejs' ) %>
<div class="container pb-5">
<h4 class="mt-5 color-text2">Categorias</h4>
<hr>
<a class="btn1 mt-5" href="/admin/categories/new">Nova categoria <i class="fa-solid fa-plus"></i></a>



<table class="table-container mt-5">
  <thead>
    <tr class="no">
      <th >ICONE</th>
      <th>NOME</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% categories.forEach(category => { %>
    <tr>
      <td><i class="<%= category.icon %>"></i></td>
      <td><%= category.name %></td>
      <td style="text-align: end;">  
          <a class="btn edit-btn" href="/admin/categories/edit/<%= category.id %>">
            <i class="fa-solid fa-pen-to-square"></i>
          </a>
          <form class="delete-form" action="/categories/delete" method="post">
            <input type="hidden" name="id" value="<%= category.id %>">
            <button class="btn delete-btn"><i class="fa-solid fa-trash"></i></button>
          </form>
      </td>
    </tr>
    <% }) %>

  </tbody>
</table>


</div>

<%- include ( '../../partials/footer.ejs' ) %>